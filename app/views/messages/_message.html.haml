.message
  .message__latest-info
    .message__latest-info__talker 
      = message.user.name
    .message__latest-info__date 
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message__older-info
    - if message.content.present?
      -# %p.message__text
      %p.message__older-info__content
        = message.content
    = image_tag message.image.url, class: 'message__older-info__image' if message.image.present?